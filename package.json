{
  "name": "diesal",
  "version": "1.0.1",
  "description": "Data structures and algorithms, written in Typescript",
  "main": "./dist/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "update-docs": "typedoc",
    "test-once": "jest",
    "test-watch": "jest --watchAll",
    "coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "test": "npm run lint && npm run coverage"
  },
  "keywords": [
    "data structures",
    "algorithms",
    "ecmascript",
    "modules"
  ],
  "author": "Jonathan Skeate",
  "license": "ISC",
  "repository": "http://github.com/skeate/diesal",
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "codeclimate-test-reporter": "^0.5.0",
    "eslint": "^6.8.0",
    "fast-check": "^1.23.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typedoc": "^0.17.1",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "testRegex": "/src/.*/__tests__/.*\\.spec\\.ts",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "files": [
    "dist/**/*.js",
    "types/**/*.d.ts"
  ]
}
